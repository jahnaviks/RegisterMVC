@*@model RegisterDB.Models.LoginModel*@

@model RegisterMVC.Models.LoginModel

@{
    ViewBag.Title = "Login";
}
<div style="color: #334d4d; text-align: center; background-color: #d1e0e0; width: 1350px">
    <h2>Login Page</h2>
</div>
@using (Html.BeginForm("Validate", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div style="background-color:#d1e0e0;width:1350px">
        @Html.ValidationSummary(true)
        <table>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                </td>
                <td>
                    <input id="email" name="email" type="email" />
                </td>

            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
                </td>
                <td>
                    <input id="password" name="password" type="password" />
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" value="Login" />
                </td>
            </tr>
        </table>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
